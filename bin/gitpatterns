LCONF='/etc/opt/patdev/patdev.conf'
[[ -s $LCONF ]] && . $LCONF || { echo "ERROR: File not found, $LCONF"; echo; exit 1; }

cd $PATDEV_REPO_DIR
for i in $PATDEV_REPOS
do
	if [[ -d $i ]]; then
		echo "Updating $i Repo..."
		cd $i
		git pull
		cd ..
	else
		echo "Cloning $i Repo..."
		git clone https://github.com/g23guy/${i}.git
	fi
	echo
done

